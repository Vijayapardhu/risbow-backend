enum ReturnStatus {
  PENDING_APPROVAL
  APPROVED
  REJECTED
  PICKUP_SCHEDULED
  PICKUP_COMPLETED
  IN_TRANSIT
  RECEIVED_AT_WAREHOUSE
  QC_IN_PROGRESS
  QC_PASSED
  QC_FAILED
  REFUND_INITIATED
  REFUND_COMPLETED
  REPLACEMENT_INITIATED
  REPLACEMENT_SHIPPED
  REPLACEMENT_COMPLETED
  CANCELLED
}

enum ReturnReason {
  DAMAGED_PRODUCT
  WRONG_ITEM
  MISSING_PARTS
  QUALITY_ISSUE
  SIZE_FIT_ISSUE
  NOT_AS_DESCRIBED
  DEFECTIVE
  CHANGED_MIND
  OTHER
}

enum ItemCondition {
  UNOPENED
  OPENED_UNUSED
  USED_LIKE_NEW
  USED_GOOD
  USED_FAIR
  DAMAGED
  DEFECTIVE
}

enum CostBearer {
  PLATFORM
  VENDOR
