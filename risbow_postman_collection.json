{
    "info": {
        "name": "RISBOW API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Send OTP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"mobile\": \"+919876543210\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/otp-send",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "otp-send"
                            ]
                        }
                    }
                },
                {
                    "name": "Verify OTP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"mobile\": \"+919876543210\",\n    \"otp\": \"123456\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/otp-verify",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "otp-verify"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Catalog",
            "item": [
                {
                    "name": "Create Product",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Cool Shirt\",\n  \"price\": 500,\n  \"categoryId\": \"cat_123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/products",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "products"
                            ]
                        }
                    }
                },
                {
                    "name": "Bulk Upload",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "file",
                                    "type": "file",
                                    "src": []
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{baseUrl}}/products/bulk",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "products",
                                "bulk"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Rooms",
            "item": [
                {
                    "name": "Create Room",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Fridays Gang\",\n  \"size\": 3,\n  \"unlockMinOrders\": 3,\n  \"unlockMinValue\": 1500,\n  \"offerId\": \"off_123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/rooms",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "rooms"
                            ]
                        }
                    }
                },
                {
                    "name": "Link Order",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/rooms/{{roomId}}/order/{{orderId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "rooms",
                                "{{roomId}}",
                                "order",
                                "{{orderId}}"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Orders",
            "item": [
                {
                    "name": "Checkout",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"roomId\": \"{{roomId}}\",\n  \"items\": [{ \"productId\": \"prod_123\", \"quantity\": 1 }],\n  \"useCoins\": 0\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/orders/checkout",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "orders",
                                "checkout"
                            ]
                        }
                    }
                },
                {
                    "name": "Confirm Order (Razorpay)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"razorpayOrderId\": \"order_...\",\n  \"razorpayPaymentId\": \"pay_...\",\n  \"razorpaySignature\": \"...\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/orders/confirm",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "orders",
                                "confirm"
                            ]
                        }
                    }
                },
                {
                    "name": "Add Gift",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"giftId\": \"gift_123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/orders/{{orderId}}/gift",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "orders",
                                "{{orderId}}",
                                "gift"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Vendors",
            "item": [
                {
                    "name": "Buy Banner",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"image\": \"base64string\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/vendors/banner",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "vendors",
                                "banner"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000/api/v1",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        },
        {
            "key": "orderId",
            "value": "",
            "type": "string"
        }
    ]
}