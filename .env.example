# ============================================
# RISBOW BACKEND - Environment Variables
# ============================================
# Copy this file to .env and fill in real values
# NEVER commit .env to version control!

# ---- Database ----
DATABASE_URL="postgresql://user:password@host:5432/risbow?schema=public"
DIRECT_URL="postgresql://user:password@host:5432/risbow?schema=public"

# ---- Authentication ----
# Option 1: HS256 (Symmetric) - Simple, good for single-service
JWT_SECRET="CHANGE_ME_use_a_64_character_random_string"

# Option 2: RS256 (Asymmetric) - Recommended for microservices
# Generate keys with: node scripts/generate-jwt-keys.js
# JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
# JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"

JWT_EXPIRES_IN="15m"

# ---- Server ----
PORT=3000
NODE_ENV="development"

# ---- Redis (optional, falls back to in-memory) ----
# Set DISABLE_REDIS=true to run without Redis (in-memory store, no Bull queues)
# DISABLE_REDIS=true
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# ---- Payment Gateway (Razorpay) ----
RAZORPAY_KEY_ID="rzp_test_xxxx"
RAZORPAY_KEY_SECRET="xxxx"
NON_GST_COMPLIANCE_FEE_PAISE=100000

# ---- Rate Limiting ----
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# ---- CORS (production) ----
FRONTEND_URL="https://your-frontend-domain.com"

# ---- OTP Provider (for production) ----
OTP_PROVIDER="console"
MSG91_AUTH_KEY=""
MSG91_SENDER_ID=""

# ---- Email (SMTP for password reset) ----
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="risbow.official@gmail.com"
SMTP_PASS=""
SMTP_FROM="risbow.official@gmail.com"
SMTP_FROM_NAME="Risbow Support"
SMTP_SECURE=false

# ---- Supabase Storage (if using) ----
SUPABASE_URL=""
SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_ROLE_KEY=""

# ---- Production Security ----
DISABLE_AI_FEATURES=false
PROMETHEUS_PORT=9090

# ---- Elasticsearch (for search) ----
ELASTICSEARCH_NODE="http://localhost:9200"
ELASTICSEARCH_INDEX="risbow"

# ---- Monitoring & Logging ----
LOG_LEVEL="info"
SENTRY_DSN=""  # For error tracking

# ---- Feature Flags ----
ENABLE_BETTING=false  # Toggle betting features
ENABLE_AI_SUGGESTIONS=true
